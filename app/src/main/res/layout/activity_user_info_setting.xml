<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_title">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:id="@+id/user_info_setting_back"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:clickable="true"
            android:src="@mipmap/return_icon"

            />
        <TextView
            android:id="@+id/user_info_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:text="@string/nick_name"
            android:textColor="@color/base_color_text_white"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/save"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="12sp"
            android:padding="10dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/text_white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/reset_nick"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_action_bar_height"
                android:background="@drawable/base_edit_input"
                android:drawableLeft="@mipmap/acount"
                android:drawablePadding="25dp"
                android:paddingLeft="15dp"
                android:paddingRight="0dp"
                android:textColorHint="#ffdddddd"
                android:textSize="@dimen/text_size_large"
                />
            <EditText
                android:id="@+id/reset_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_action_bar_height"
                android:background="@drawable/base_edit_input"
                android:drawableLeft="@mipmap/ico_phone"
                android:drawablePadding="25dp"
                android:paddingLeft="15dp"
                android:paddingRight="0dp"
                android:ellipsize="middle"
                android:inputType="phone"
                android:maxEms="7"
                android:textColorHint="#ffdddddd"
                android:visibility="gone"
                android:textSize="@dimen/text_size_large"
                />

            <ImageView
                android:id="@+id/clear_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:clickable="true"
                android:src="@mipmap/clear_text"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"

                />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>