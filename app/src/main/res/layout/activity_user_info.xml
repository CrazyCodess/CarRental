<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/userinfo_back">
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/userinfoback"
            android:orientation="vertical">

            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="133dp"
                android:layout_marginTop="25dp"
                android:text="@string/app_name"
                android:textColor="@color/base_color_text_white"
                android:textSize="@dimen/text_size_large" />

            <ImageView
                android:id="@+id/mobie_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/app_name"
                android:layout_below="@+id/app_name"
                android:layout_marginTop="35dp"
                android:src="@drawable/avator" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/app_name"
                android:layout_below="@+id/mobie_btn"
                android:layout_marginTop="36dp"
                android:textSize="30sp" />
        </RelativeLayout>





        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_line_width_2"
            android:background="@drawable/base_horizontal_line" >
        </View>

        <RelativeLayout
            android:id="@+id/layout_rent_bike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:minHeight="50dp"
            android:padding="10dp" >

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/rent_bike"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/text_right"
                android:textSize="18sp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_line_width_2"
            android:background="@drawable/base_horizontal_line" >
        </View>

        <RelativeLayout
            android:id="@+id/layout_rent_amoutbike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:minHeight="50dp"
            android:padding="10dp" >

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/rent_amount_bike"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/text_right"
                android:textSize="18sp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_line_width_2"
            android:background="@drawable/base_horizontal_line" >
        </View>


        <RelativeLayout
            android:id="@+id/route_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:minHeight="50dp"
            android:padding="10dp" >

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/route_record"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/text_right"
                android:textSize="18sp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_line_width_2"
            android:background="@drawable/base_horizontal_line" >
        </View>
        <Button
            android:id="@+id/btn_logout"
            style="@style/Smile.Button.logout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:text="@string/logout"
            android:textSize="18sp"/>

    </LinearLayout>
</RelativeLayout>