<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_title">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:id="@+id/userinfo_back"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:clickable="true"
            android:src="@mipmap/return_icon"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:text="@string/user_info"
            android:textColor="@color/base_color_text_white"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/userinfo_back">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="224dp"
            android:background="@drawable/userinfoback"
            android:orientation="vertical"
            android:layout_weight="0.99">

            <!--<TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="133dp"
                android:layout_marginTop="25dp"
                android:text="@string/app_name"
                android:textColor="@color/base_color_text_white"
                android:textSize="@dimen/text_size_large" />-->

            <ImageView
                android:id="@+id/mobie_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:src="@drawable/avator"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18351962086"
                android:layout_marginTop="29dp"
                android:textColor="@color/base_color_text_white"
                android:textSize="16sp"
                android:layout_below="@+id/mobie_btn"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>





        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/color_line"

            />

        <RelativeLayout
            android:id="@+id/layout_rent_bike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:minHeight="50dp"
            android:padding="10dp" >

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/rent_bike"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/arrow_right"
                android:textSize="18sp"/>
        </RelativeLayout>

        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/color_line"

            />

        <RelativeLayout
            android:id="@+id/layout_rent_amoutbike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:minHeight="50dp"
            android:padding="10dp" >

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/rent_amount_bike"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/arrow_right"
                android:textSize="18sp"/>
        </RelativeLayout>

        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/color_line"

            />


        <RelativeLayout
            android:id="@+id/route_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:minHeight="50dp"
            android:padding="10dp" >

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/route_record"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/arrow_right"
                android:textSize="18sp"/>
        </RelativeLayout>

        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/color_line"

            />

        <RelativeLayout
            android:id="@+id/user_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:minHeight="50dp"
            android:padding="10dp" >

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/user_setting"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                style="@style/Smile.TextView._Black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/arrow_right"
                android:textSize="18sp"/>
        </RelativeLayout>

        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/color_line"

            />
        <Button
            android:id="@+id/btn_logout"
            style="@style/Smile.Button.logout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:text="@string/logout"
            android:textSize="18sp"/>

    </LinearLayout>
</LinearLayout>