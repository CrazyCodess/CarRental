<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg" >

    <LinearLayout
        android:id="@+id/logout_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="0"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/unlog_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/mobie_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/avator" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/black_font"
                android:textSize="16sp" />

            <Button
                android:id="@+id/login0"
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape"
                android:text="登录"
                android:textSize="10dp" />

            <Button
                android:id="@+id/regist"
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape"
                android:text="注册"
                android:textSize="10dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/user_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/login_hint"
            android:textColor="#ffb8b8b8"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navigation_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/logout_layout"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/item_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center" >

            <FrameLayout
                android:id="@+id/view_msg_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/img_1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_stat_dm" />
            </FrameLayout>

            <TextView
                android:id="@+id/title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/view_msg_layout"
                android:text="@string/rent_bike"
                android:textColor="@color/black_font"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_0"
            android:layout_width="match_parent"
            android:layout_marginTop="14dp"
            android:layout_height="40dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/img_0"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/biz_news_list_tag_video" />

            <TextView
                android:id="@+id/title_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/img_0"
                android:text="关于我们"
                android:textColor="@color/black_font"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="14dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/img_3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/biz_news_pread_update_divider_image" />

            <TextView
                android:id="@+id/title_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/img_3"
                android:text="我的收藏"
                android:textColor="@color/black_font"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="14dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/img_4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/setting" />

            <TextView
                android:id="@+id/title_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/img_4"
                android:text="个人设置"
                android:textColor="@color/black_font"
                android:textSize="16sp" />
        </RelativeLayout>
        <!--
                <RelativeLayout
                    android:id="@+id/item_5"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="14dp"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/img_5"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/search" />

                </RelativeLayout>-->

        <RelativeLayout
            android:id="@+id/item_6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="14dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/img_6"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/biz_news_pread_update_divider_image" />

            <TextView
                android:id="@+id/TextView06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/img_6"
                android:text="退出登陆"
                android:textColor="@color/black_font"
                android:textSize="16sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/item_7"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="14dp"
            android:gravity="center" >
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>