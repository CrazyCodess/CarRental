<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg">
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/userinfoback"
            android:orientation="vertical">

            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="133dp"
                android:layout_marginTop="25dp"
                android:text="@string/app_name"
                android:textColor="@color/base_color_text_white"
                android:textSize="@dimen/text_size_large" />

            <ImageView
                android:id="@+id/mobie_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/app_name"
                android:layout_below="@+id/app_name"
                android:layout_marginTop="35dp"
                android:src="@drawable/avator" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/app_name"
                android:layout_below="@+id/mobie_btn"
                android:layout_marginTop="36dp"
                android:textSize="30sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_line_width_2"
            android:background="@drawable/base_horizontal_line" >
        </View>
        <TextView
            android:id="@+id/rent_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出租单车"
            android:drawableRight="@drawable/right_click"
            android:paddingLeft="5dp"
            android:textSize="@dimen/text_size_large"/>
        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出登陆"
            android:drawableRight="@drawable/right_click"
            android:paddingLeft="5dp"
            android:textSize="@dimen/text_size_large"/>

    </LinearLayout>
</RelativeLayout>