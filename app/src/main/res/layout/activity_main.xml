<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".main.MainActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/shape_top">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00000000"
            android:id="@+id/slide_btn"
            android:paddingLeft="10dp"
            android:paddingTop="18dp"

            android:src="@drawable/slidebtn"
            android:layout_alignBottom="@+id/title_bar_name"
            android:layout_alignParentTop="true" />
        <TextView
            android:id="@+id/title_bar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:paddingTop="18dp"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" />

        <ImageView
            android:id="@+id/loc_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/location_f"
            android:background="#efffffff"
            android:layout_marginStart="89dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</LinearLayout>
