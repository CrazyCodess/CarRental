<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".main.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_top">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00000000"
            android:id="@+id/slide_btn"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/back"
            android:layout_alignParentTop="true" />
        <TextView
            android:id="@+id/rent_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_bg">
    <EditText
        android:id = "@+id/bike_type"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/input"
        android:hint="@string/bike_type"
        android:maxLength="11"
        android:paddingLeft="10dp" />

    <EditText
        android:id = "@+id/rent_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/input"
        android:hint="@string/hire_time"
        android:maxLength="11"
        android:paddingLeft="10dp" />

    <EditText
        android:id = "@+id/bike_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/input"
        android:hint="@string/bike_phone"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/bike_pass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/input"
        android:hint="@string/bike_pass"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="10dp" />

    <EditText
        android:id = "@+id/bike_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/input"
        android:hint="@string/bike_detail"
        android:minLines="4"
        android:paddingLeft="10dp" />
    <com.baidu.mapapi.map.MapView
        android:id="@+id/loc_bmapView"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:background="@drawable/input"
        android:layout_weight="0.50" />
    <Button
        android:id="@+id/rent_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_action_bar_height"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:background="@drawable/btn_login_selector"
        android:gravity="center"
        android:text="@string/rent"
        android:textColor="@color/base_color_text_white"
        android:textSize="@dimen/text_size_large" />
</LinearLayout>
</LinearLayout>